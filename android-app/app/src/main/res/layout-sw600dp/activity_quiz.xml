<?xml version="1.0" encoding="utf-8"?>
<!-- iOS風クイズ画面（タブレット・横2カラム） -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_gray6">

    <!-- 左側: 画像表示エリア -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.58">

        <ImageView
            android:id="@+id/ivQuizImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:contentDescription="クイズ画像" />

    </androidx.cardview.widget.CardView>

    <!-- 右側: 情報とボタン -->
    <LinearLayout
        android:id="@+id/rightPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.38">

        <!-- 進捗 -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="問題 1 / 10"
            android:textSize="17sp"
            android:textColor="@color/text_secondary" />

        <!-- タイマー -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0:00"
            android:textSize="20sp"
            android:textColor="@color/ios_blue"
            android:fontFamily="sans-serif-medium" />

        <!-- スコア -->
        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="0 点"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- フィードバック -->
        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="正解！"
            android:textSize="32sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- ボタンコンテナ -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSame"
                style="@style/IOSButton.Green"
                android:layout_width="220dp"
                android:layout_height="64dp"
                android:text="同じ"
                android:textSize="22sp"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/ios_green" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDifferent"
                style="@style/IOSButton.Red"
                android:layout_width="220dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:text="違う"
                android:textSize="22sp"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/ios_red" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
